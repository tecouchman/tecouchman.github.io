<script is:inline>
	const backButton = document.getElementById('back-button');
	const referrer = document.referrer;
  
	if (referrer) {
	  try {
		const referrerUrl = new URL(referrer);
		const currentOrigin = window.location.origin;
  
		// Show back button only if referrer is from the same origin and history allows back navigation
		if (referrerUrl.origin === currentOrigin && window.history.length > 1) {
		  backButton.style.display = 'inline-block';
		}
	  } catch (error) {
		// Invalid referrer (unlikely if referrer is provided)
	  }
	}
  </script>